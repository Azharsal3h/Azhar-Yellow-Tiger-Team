checking = "yes"

while checking.lower().strip() == "yes":
    user_input = input("What is your age: ").strip()
    
    if user_input.isdigit():
        age = int(user_input)
        if age >= 18:
            print("Yes, you can vote.")
        else:
            print("You can't vote.")
    else:
        print("Invalid input. Please enter a number.")
        continue
    
    checking = input("Would you like to check another age? (yes/no): ").strip()

list1 = [3, -1, 0, 6, -4]

for x in list1:
    if x > 0:
        print(f"{x} is positive")
    elif x < 0:
        print(f"{x} is negative")
    else:
        print(f"{x} is zero")

inventory = ["tnt", "glass", "grass", "netherite", "wood"]

for item in inventory:
    if item == "wood":
        print("wood is a material")
    elif item == "tnt":
        print("tnt is explosive")
    else:
        print(f"{item} is unclassified")
